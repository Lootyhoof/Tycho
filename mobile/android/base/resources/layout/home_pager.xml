<!-- This file is used to include the home pager in goanna app
     layout based on screen size -->

<org.mozilla.goanna.home.HomePager xmlns:android="http://schemas.android.com/apk/res/android"
                                  xmlns:goanna="http://schemas.android.com/apk/res-auto"
                                  android:id="@+id/home_pager"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:background="@android:color/white">

    <org.mozilla.goanna.home.HomePagerTabStrip android:layout_width="match_parent"
                                              android:layout_height="@dimen/tabs_strip_height"
                                              android:layout_gravity="top"
                                              android:gravity="center_vertical"
                                              android:background="@color/background_light"
                                              goanna:tabIndicatorColor="@color/text_color_highlight"
                                              android:textAppearance="@style/TextAppearance.Widget.HomePagerTabStrip"/>

</org.mozilla.goanna.home.HomePager>
